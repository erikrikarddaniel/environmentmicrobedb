<%= form_for(@sample_property, :url => project_sample_set_sample_property_path(params[:project_id],params[:sample_set_id],params[:sample_id],@sample_property), :method => "put") do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_field :name, :placeholder => "Type" %>
    <%= f.text_field :value, :placeholder => "Value" %>
    <%= f.collection_select :datatype, GlobalConstants::PROPERTY_TYPE.keys, :downcase,:downcase  %>
    <%= f.submit %>
  </div>
<% end %>
