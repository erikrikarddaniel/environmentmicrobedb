<%= form_for(@orf_aa) do |f| %>
  <% if @orf_aa.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@orf_aa.errors.count, "error") %> prohibited this orf_aa from being saved:</h2>

      <ul>
      <% @orf_aa.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :assembly_id %><br />
    <%= f.collection_select(:assembly_id, Assembly.all.sort_by { |a| a.list_name }, :id, :list_name) %>
  </div>
  <div class="field">
    <%= f.label :file, "Choose a fasta file from FragGeneScan containing amino acid sequences of your ORFs" %>
    <%= f.file_field :file, :class => "span12"%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
