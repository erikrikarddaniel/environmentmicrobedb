<%= form_for([@project,@project.properties.build], :html => { :class => "form-inline"}) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_field :name, :placeholder => "Type" %>
    <%= f.text_field :value, :placeholder => "Value" %>
    <%= f.collection_select :datatype, @property_types, :downcase,:to_sym, :prompt => true  %>
    <%= f.submit %>
  </div>
<% end %>
